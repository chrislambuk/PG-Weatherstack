<?xml version='1.0' encoding='utf-8'?>
<widget id="com.arqmedia.weather" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>WeatherNOW</name>
    <description>
        A weather app.
    </description>
    <author email="info@arqmedia.co.uk" href="http://arqmedia.co.uk">
        Arq media
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="WKWebViewOnly" value="true" />
</widget>
